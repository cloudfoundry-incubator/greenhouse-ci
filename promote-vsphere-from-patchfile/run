#!/bin/sh

set -e

pushd patchfile
  PATCHFILE=$(ls patchfile-*)
popd

pushd manifest
  MANIFEST=$(ls patchfile-*)
  sed -e "s#patch_file: patchfile#patch_file: https://koaladefaultstore.blob.core.windows.net/stemcell/patchfile/patchfile#" -i -- $MANIFEST
  sed -e "s#2012-vhd/##" -i -- $MANIFEST
popd

echo "Copying ${PATCHFILE} to https://koaladefaultstore.blob.core.windows.net/stemcell/patchfile/${PATCHFILE}"
azcopy --source ./patchfile --destination https://koaladefaultstore.blob.core.windows.net/stemcell/patchfile --include "patchfile-*" --dest-key "${STORAGE_ACCESS_KEY}" --quiet
echo "Copying ${MANIFEST} to https://koaladefaultstore.blob.core.windows.net/stemcell/patchfile/${MANIFEST}"
azcopy --source ./manifest --destination https://koaladefaultstore.blob.core.windows.net/stemcell/patchfile --include "patchfile-*" --dest-key "${STORAGE_ACCESS_KEY}" --quiet
